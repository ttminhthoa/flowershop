<div class="title"><span class="title_icon"><img src="/images/bullet1.gif" alt="" /></span>LIST ORDER</div>
<div class= "form_row"><strong>New Order: </strong>(<%=@count%>)</div>
<table border="1"  cellpadding="0" cellspacing="0">
	<tr class="form_row">
		<th>Recipient: </th>
		<th>Address: </th>
		<th>Phone: </th>
	</tr>
<% for order in @orders %>
 	<tr <%if order.status ==0 %> bgcolor="ff0000" <%end%>>
		<td>
			<%=order.recipient%>
		</td>
		<td>
			<%=order.address%>
		</td>
		<td>
			<%=order.phone%>
		</td>
		<td>
			<%=link_to "show",:action => :show,:controller=>:order,:id => order.id %>
		</td>
		<td>
			<%=link_to "edit",:action => :edit,:controller=>:order,:id => order.id %>
		</td>
		
 	</tr>
<%end%>
</table>
<div class="pagination"> <%= will_paginate @orders%> </div>
 
