<div class="title"><span class="title_icon"><img src="/images/bullet6.gif" alt="" /></span>LIST CONTACT</div>
<div class= "form_row"><strong>New Contact: </strong>(<%=@count%>)</div>
<table border="1"  cellpadding="0" cellspacing="0">
	<tr class="form_row">
		<th>Name</th>
		<th>Email</th>
	</tr>
<% for contact in @listcontact %>
 	<tr <%if contact.status ==0 %> bgcolor="00ff00" <%end%>>
		<td>
			<%=contact.contact_name%>
		</td>
		<td>
			<%=contact.contact_email%>
		</td>
		<td>
			<%=link_to "show",:action => :show,:controller=>:contactus,:id => contact.id %>
		</td>
		<td>
			<%=link_to "destroy",:action => :destroy,:controller=>:contactus,:id => contact.id%>
		</td>
 	</tr>
<%end%>
</table>
<div class="pagination"> <%= will_paginate @listcontact %></div>
 